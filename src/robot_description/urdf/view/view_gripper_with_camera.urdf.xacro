<?xml version="1.0"?>
<robot name="gripper_with_camera" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:arg name="use_nominal_extrinsics" default="false" />
  <xacro:include filename="$(find robot_description)/urdf/adaptive_gripper/agripper_with_camera.urdf.xacro"/>

  <link name="base_link" />
  <xacro:gripper_with_camera parent="base_link" name="camera" use_nominal_extrinsics="$(arg use_nominal_extrinsics)">
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </xacro:gripper_with_camera>
</robot>
